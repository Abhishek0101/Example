<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#00FF00" />
             <gradient  android:angle="-90"  android:startColor="#01DF01" android:endColor="#088A29"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#00FF00" />
             <solid  android:color="#01DF01"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#00FF00" />
             <gradient  android:angle="-90"  android:startColor="#2EFE64" android:endColor="#04B404" />            
         </shape>
     </item>
</selector>