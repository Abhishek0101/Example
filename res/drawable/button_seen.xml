<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#A901DB" />
             <gradient  android:angle="-90"  android:startColor="#D358F7" android:endColor="#BF00FF"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#BF00FF" />
             <solid  android:color="#D358F7"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#BF00FF" />
             <gradient  android:angle="-90"  android:startColor="#E2A9F3" android:endColor="#D358F7" />            
         </shape>
     </item>
</selector>