<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="60dp"
        android:background="#63a46e"
        android:contentDescription="@string/app_name" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Test mode"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_close"
            android:background="@drawable/abc_btn_borderless_material" />
    </RelativeLayout>

    <Button
        android:id="@+id/selfBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_general"
        android:elevation="5dp"
        android:textSize="25sp"
        android:text="      Self      "
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/assistedBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/selfBtn"
        android:layout_alignBottom="@+id/selfBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_general"
        android:elevation="5dp"
        android:textSize="25sp"
        android:text=" Assisted "
        android:textColor="#ffffff" />

</RelativeLayout>