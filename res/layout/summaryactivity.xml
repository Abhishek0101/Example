<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="920dp"
    android:layout_height="480dp"
    android:background="@drawable/app_background" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF8000" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"
            android:text="SUMMARY"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/abc_btn_borderless_material"
            android:src="@drawable/ic_action_close" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="260dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/relative"
        android:background="#848484" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp" >

        <View
            android:id="@+id/view2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_answered"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view2"
            android:text="Answered"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <View
            android:id="@+id/view3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_seen"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view3"
            android:layout_alignLeft="@+id/textView2"
            android:text="Seen but unanswered"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <View
            android:id="@+id/view4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/view3"
            android:layout_below="@+id/view3"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_unseen"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view4"
            android:layout_alignLeft="@+id/textView3"
            android:text="Unseen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/relative"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/view1" >

        <LinearLayout
            android:id="@+id/linearQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>