<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/app_background">

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignBaseline="@+id/assessBtn"
        android:layout_alignBottom="@+id/assessBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_report3"
        android:text="" />

    <Button
        android:id="@+id/assessBtn"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dip"
        android:background="@drawable/button_assess3" />

    <Button
        android:id="@+id/adminBtn"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignBaseline="@+id/reportBtn"
        android:layout_alignBottom="@+id/reportBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dip"
        android:background="@drawable/button_admin3"
        android:text="" />

</RelativeLayout>
