<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
         android:padding="2sp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/downloadpaper_textView"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Download Paper"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/downloadpaper_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/process" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
         android:padding="2sp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/getlocation_textView"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Get Location"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/getlocation_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/process" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="2sp" >

        <TextView
            android:id="@+id/savelocation_textView2"
             android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Save Location"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/saveloc_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/process" />

    </TableRow>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="Medium Text"
         android:padding="3sp"
        android:background="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/exit_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="2sp"
        
        android:src="@drawable/exit" />

</LinearLayout>